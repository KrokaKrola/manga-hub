{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "api-main": {
      "type": "application",
      "root": "apps/api-main",
      "entryFile": "main",
      "sourceRoot": "apps/api-main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-main/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "message-routes": {
      "type": "library",
      "root": "libs/message-routes",
      "entryFile": "index",
      "sourceRoot": "libs/message-routes/src",
      "compilerOptions": {
        "tsConfigPath": "libs/message-routes/tsconfig.lib.json"
      }
    },
    "emails": {
      "type": "application",
      "root": "apps/emails",
      "entryFile": "main",
      "sourceRoot": "apps/emails/src",
      "compilerOptions": {
        "tsConfigPath": "apps/emails/tsconfig.app.json"
      }
    }
  }
}